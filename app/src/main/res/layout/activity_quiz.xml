<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/quizActivityScreen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/background1_quiz"
    tools:context=".MainActivity"
    android:gravity="center">

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="180dp"
        android:layout_height="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/balloon" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="180dp"
        android:layout_height="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/balloon" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/categoryName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Category"
            android:textAlignment="center"
            android:background="#E6DEE77E"
            android:layout_marginBottom="30dp"
            android:fontFamily="@font/achemost"
            android:padding="5dp"
            android:textColor="@color/primary_color"
            android:textStyle="bold"
            android:textSize="30sp"
            />

        <TextView
            android:id="@+id/questionNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="question number"
            android:textSize="20sp"
            android:fontFamily="@font/achemost"
            android:background="#E673C879"
            android:padding="5sp"/>

        <TextView
            android:id="@+id/questionText"
            android:layout_width="match_parent"
            android:layout_height="266dp"
            android:layout_marginBottom="16dp"
            android:background="#E6B3F6B7"
            android:fontFamily="@font/achemost"
            android:gravity="center"
            android:padding="4dp"
            android:text="Question\nquestion"
            android:textAlignment="center"
            android:textColor="@color/background_dark"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/option1Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:backgroundTint="#E6F0ABA9"
            android:fontFamily="@font/achemost"
            android:text="Option 1"
            android:textColor="@color/background_dark"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/option2Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:backgroundTint="#E6EFABEB"
            android:fontFamily="@font/achemost"
            android:text="Option 2"
            android:textColor="@color/background_dark"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/option3Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:backgroundTint="#E6EFBFB0"
            android:fontFamily="@font/achemost"
            android:text="Option 3"
            android:textColor="@color/background_dark"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/option4Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:backgroundTint="#E6BAD1EB"
            android:fontFamily="@font/achemost"
            android:text="Option 4"
            android:textColor="@color/background_dark"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

    <ImageView
        android:visibility="invisible"
        android:id="@+id/resultPopup"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:src="@drawable/wronganser"
        android:layout_gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
    </ImageView>



